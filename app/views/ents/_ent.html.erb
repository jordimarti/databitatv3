<div id="<%= dom_id ent %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= ent.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= ent.category %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reviewid:</strong>
    <%= ent.reviewid %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ent", ent, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this ent', edit_ent_path(ent), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
